tags: $:/tags/Macro
title: Override Timeline Macro

<!-- Override one or both of the following two macros with a global or local macro of the same name 
if you need to change how titles are displayed on a timeline -->

<!-- override $:/core/macros/timeline -->

\define timeline-link()
\whitespace trim
<$reveal type="nomatch" stateTitle={{!!title}} stateField="calendarEntry" text="yes">
  <$link to={{!!title}}>
    <<timeline-title>>
  </$link>
</$reveal>
\end