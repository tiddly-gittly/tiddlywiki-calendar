title: $:/plugins/linonetwo/calendar-statistic-chart/tiddlywiki-ui/Modal/CreateGaugeModalFooter

\define cleanUpAction()
<$action-setfield
  $tiddler="$:/state/CalendarStatisticChart/create-gauge-tiddler"
  text=""
  tags=""
  draft.title=""
  startDate=""
  endDate=""
/>
<$action-setfield
  $tiddler="$:/state/CalendarStatisticChart/create-gauge-tiddler-caption"
  draft.title=""
/>
<!-- alarm -->
<$action-setfield      $tiddler="$:/state/CalendarStatisticChart/create-gauge-tiddler" alarms="" />
\end

<!-- learn this from twMat https://groups.google.com/g/tiddlywiki/c/XXbzgRmcXF0 -->
<$wikify name="newtitle" text="{{$:/plugins/linonetwo/tw-calendar/settings/prefix}}{{$:/state/CalendarStatisticChart/create-gauge-tiddler!!draft.title}}" >

<div class="tw-calendar-footer-buttons">
  <$button class="tw-calendar-footer-button" message="tm-close-tiddler">
    Close
    <<cleanUpAction>>
  </$button>
  

  <$button class="tw-calendar-footer-button" message="tm-close-tiddler">
    Create
    <!-- Remove draft.title first -->
    <$action-setfield $tiddler="$:/state/CalendarStatisticChart/create-gauge-tiddler" $field="draft.title" />
    <$action-createtiddler
      $basetitle=<<newtitle>>
      $template="$:/state/CalendarStatisticChart/create-gauge-tiddler"
      caption={{$:/state/CalendarStatisticChart/create-gauge-tiddler-caption!!draft.title}}
      type="text/vnd.tiddlywiki"
    />
    <$let currentTiddler=<<createTiddler-title>> >
      <$action-sendmessage $message="tm-save-tiddler" $param=<<currentTiddler>> />
    </$let>
    <<cleanUpAction>>
  </$button>
</div>
