title: $:/plugins/linonetwo/visualization-dashboard/tiddlywiki-ui/PageLayout/CalendarDashboardLayout
name: <<lingo CalendarDashboardLayout/Caption $:/plugins/linonetwo/visualization-dashboard/language/>>
description: <<lingo CalendarDashboardLayout/Description $:/plugins/linonetwo/visualization-dashboard/language/>>
tags: $:/tags/Layout
icon: $:/plugins/linonetwo/visualization-dashboard/tiddlywiki-ui/Icon/CalendarDashboard

\whitespace trim
\define containerClasses()
tc-page-container tc-page-view-$(storyviewTitle)$ tc-language-$(languageTitle)$ visualization-dashboard-layout-container
\end
\import [subfilter{$:/core/config/GlobalImportFilter}]

\procedure list-item()
<div class="visualization-dashboard-layout-gauge-item-container">
	<h3 class="visualization-dashboard-layout-gauge-item-title">
		<$transclude field="caption"><$view field="title"/></$transclude>
	</h3>
	<div class="visualization-dashboard-layout-gauge-item-body">
		<$transclude field="text" />
	</div>
</div>
\end list-item


<div class=<<containerClasses>>>
	<main class="visualization-dashboard-layout-main-area">
		<div class="visualization-dashboard-layout-gauge-list-container">
			<$list filter="[all[shadows+tiddlers]tag[$:/Tags/CalendarStatisticChart/Gauge]!is[draft]]">
				<<list-item>>
			</$list>
		</div>
	</main>
</div>
